# Application
APP_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:8080

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=certitrack_dev
DB_USER=certitrack_user
DB_PASSWORD=dev_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=dev_redis_password

# JWT
JWT_SECRET=development-jwt-secret-key-minimum-32-characters
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h

# SMTP (for development - use Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=CertiTrack Dev <dev@certitrack.local>

# File Storage
STORAGE_ROOT=./storage
MAX_FILE_SIZE_MB=10

# Logging
LOG_LEVEL=debug
ENABLE_METRICS=true

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_APP_NAME=CertiTrack